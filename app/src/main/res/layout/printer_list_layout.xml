<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:padding="5dp">

    <ImageView
        android:id="@+id/bluetoothIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:background="@drawable/ic_menu_bluetooth"
        android:backgroundTint="?attr/colorControlHighlight"
        android:clickable="false"
        android:elevation="0dp"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:id="@+id/relativelayoutCustomerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_weight="0">

        <LinearLayout
            android:id="@+id/linearLayoutCustomer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/txtPrinterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="top"
                android:text="Printer Name"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtPrinterMac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:text="Mac Address"
                android:textColor="?android:attr/colorControlNormal"
                android:textSize="16dp" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>